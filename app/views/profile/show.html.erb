
<hr/>
<h1><%= @user.username %>'s Profile</h1>
<p>
    Username : <%= @user.username%> 
    <br/>
    Email : <%= @user.email%>
</p>

<div id='follow_info'>
  <strong>Following (<%= @user.following.count %>)</strong> | 
  <strong>Followers (<%= @user.followers.count %>)</strong>
</div>

<% if user_signed_in? && @user != current_user %>
  <p><%= render 'follow_form' %></p>
<% end %>

<h3>Posts</h3>

<% if @posts.any? %>
  <ul>
    <% @posts.each do |post| %>
     <li><strong><%= link_to post.title, post_path(post) %></strong> created by <strong><%= @user.username %></strong> at <%= post.created_at.in_time_zone("Istanbul").strftime("%e.%m.%Y, %H:%M") %>.</li>
    <% end %>
  </ul>
<% else %>
  <p>There is no post</p>
<% end %>

<hr/>

<h3>Comments</h3>

<% if @comments.any? %>
  <ul>
    <% @comments.each do |comment| %>
     <li><%= @user.username %> wrote <strong><%= link_to comment.title, post_path(comment.post) %></strong> comment to <strong><%= link_to comment.post.title, post_path(comment.post) %></strong> at <%= comment.created_at.in_time_zone("Istanbul").strftime("%e.%m.%Y, %H:%M") %>.</li>
    <% end %>
  </ul>
<% else %>
  <p>There is no post</p>
<% end %>