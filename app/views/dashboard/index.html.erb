<h1><%= current_user.username %>'s Dashboard</h1>
<hr />

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Visible?</th>
      <th colspan=""></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% if @posts.any?%>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.in_time_zone("Istanbul").strftime("%e.%m.%Y, %H:%M") %></td>
        <td><%= post.visible %></td>
        <td><%= link_to "#{post.comments.count} Comments", post_comments_path(post) %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% else %>
    <p>You have not sent a post yet. </p>
  <% end %>
  </tbody>
</table>
