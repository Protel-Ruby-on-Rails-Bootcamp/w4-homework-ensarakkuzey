<div class="col-12 flex-header">
  <h4>Bookmarks</h4>
  <div class="line"></div>
</div>

<% if @bookmarks.any? %>
    <div class="col-12">
        <div class="row">
            <% @bookmarks.each do |bookmark| %>
                <div class="col-md-6 col-xs-6 mt-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-12 mb-4">
                                <div class="row">
                                    <div class="col-12 post-area mt-2">
                                        <h6><%= link_to bookmark.post.title, post_path(bookmark.post) %></h6>
                                        <%= image_tag bookmark.post.user.gravatar_url, :class => "gravatar-post" %>
                                        <strong><%= link_to bookmark.post.user.username, profile_path(bookmark.post.user)  %></strong>
                                        <br>
                                        <span><%= bookmark.post.content.truncate(150) %></span>
                                    </div>
                                    <div class="col-12 post-info mt-3">
                                        <%= link_to "Show", post_path(bookmark.post), class: "btn btn-success btn-radius", style: "float:right;" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
<% else %>
    <div class="col-12">
        <div class="alert alert-warning" role="alert">
            Your bookmarks are empty. Visit your <strong><%= link_to 'feed', feed_path%></strong> to create a reading list!
        </div>
    </div>
<% end %>