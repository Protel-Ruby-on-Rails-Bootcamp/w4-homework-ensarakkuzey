<p id="notice"><%= notice %></p>

<h3>
  <%= @post.title %>
</h3>

<p>
  <%= @post.content %>
</p>

<hr />

<h1>Comments</h1>
<p><%= render "comments", user_comments: @user_comments %></p>

<% unless @post.user == current_user %>
  <h2>Add a comment</h2>
  <div id='send_comment'>
    <%= render 'send_comment' %>
  </div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
