<div class="col-12 flex-header">
    <h4>Edit Post</h4>
    <div class="line"></div>
</div>

<div class="col-md-12">
  <div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <%= render 'form', post: @post %>
            </div>
        </div>
    </div>

    <div class="col-md-12 mt-4">
        <span>
            <%= link_to 'Show', @post, class:"btn btn-success btn-radius", style: "float:right;" %>
            <%= link_to 'Back', posts_path, class:"btn btn-success btn-radius", style: "float:right;" %>
        </span>
    </div>

  </div>
</div>
